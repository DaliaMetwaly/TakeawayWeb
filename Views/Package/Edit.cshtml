@model Takeaway.Models.Package

@{
    ViewBag.Title = "Edit";
}

<div class="page-content" style="min-height: 1119px">
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="~/Home/index">الرئيسية</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/Package/Index"> الحزم</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                اضافة حزمه
            </li>
        </ul>
    </div>
    <div id="divMsg">@Html.Raw(ViewBag.Msg)</div>
    <div class="row">
        <div class="col-md-12">
            @*<div id="bootstrap_alerts_demo">
                </div>*@
            <div class="portlet box grey-salsa">
                <div class="portlet-title">
                    <div class="caption">
                        اضافة حزمه
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
                    </div>
                </div>
                <div class="portlet-body form">

                    <!-- BEGIN FORM-->

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "Metronic-alerts alert alert-danger fade in" })

                        <div class="row">
                            <div class="col-md-9 ">
                                <div class="form-body">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackageNameAr, "الحزمه بالعربية", htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.EditorFor(model => model.PackageNameAr, new { htmlAttributes = new { placeholder = "إدخل الحزمة بالعربية", @class = "form-control" } })
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.PackageNameAr, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackageNameEn, "الحزمه بالأنجليزية", htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">

                                            @Html.EditorFor(model => model.PackageNameEn, new { htmlAttributes = new { placeholder = "إدخل الحزمة بالأنجليزية", @class = "form-control" } })
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.PackageNameEn, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackagePrice, "السعر", htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.EditorFor(model => model.PackagePrice, new { htmlAttributes = new { placeholder = "إدخل السعر", @class = "form-control" } })
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.PackagePrice, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackagePeriod, "الفترة باليوم", htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.EditorFor(model => model.PackagePeriod, new { htmlAttributes = new { placeholder = "إدخل الفترة باليوم", @class = "form-control" } })
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.PackagePeriod, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackageStartDate, "تاريخ البدايه", new { @class = "col-md-4 control-label " })
                                        <div class="input-group col-md-6">
                                            @Html.EditorFor(model => model.PackageStartDate, new { htmlAttributes = new { placeholder = "تاريخ البدايه", @class = "form-control ", data_val = "false" } })
                                            <span class="input-group-addon input-circle-right">
                                                <i class="fa fa-calendar"></i>
                                                @Html.ValidationMessageFor(model => model.PackageStartDate, null, new { @class = "text-danger" })
                                            </span>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackageEndDate, "تاريخ النهايه", new { @class = "col-md-4 control-label " })
                                        <div class="input-group col-md-6">
                                            @Html.EditorFor(model => model.PackageEndDate, new { htmlAttributes = new { placeholder = "تاريخ النهايه", @class = "form-control ", data_val = "false"} })
                                            <span class="input-group-addon input-circle-right">
                                                <i class="fa fa-calendar"></i>
                                                @Html.ValidationMessageFor(model => model.PackageEndDate, null, new { @class = "text-danger" })
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group" style="display:none;">
                                        <div class="col-md-4">

                                        </div>
                                        <div class="input-group col-md-6">
                                            <div class="md-checkbox">
                                                @Html.CheckBoxFor(model => model.IsActive, new { @class = "md-check" })
                                                <label for="IsActive">
                                                    التفعيل
                                                    <span class="inc"></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>
                                                </label>
                                            </div>
                                            <span class="input-group-addon input-circle-right">
                                            </span>
                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>

                        <div class="form-actions fluid">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" value="حفظ" class="btn green " />
                                    <a href="/Index" class="btn default">للخلف</a>

                                </div>
                            </div>
                        </div>
                    }

                    <!-- END FORM-->
                </div>




            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script>
        $(function () {
            $('#PackageStartDate').datepicker(
                {
                    //inline: true,
                    dateFormat: 'yy-mm-dd',
                    //orientation: 'right ',

                    autoclose: true
                }
            );
        });
        $(function () {
            $('#PackageEndDate').datepicker(
                {
                    // inline: true,
                    dateFormat: 'yy-mm-dd',
                    orientation: 'right ',

                    // isRTL: true,
                    autoclose: true,
                    todayHighlight: true
                }
            );
        });

        $(document).ready(function () {
            $("#PackageStartDate").val('@Model.PackageStartDate.ToString("yyyy-MM-dd")');
            $("#PackageEndDate").val('@Model.PackageEndDate.ToString("yyyy-MM-dd")');

        });
    </script>
}
