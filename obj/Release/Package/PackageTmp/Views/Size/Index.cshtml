@section Scripts{

    <script src="~/Scripts/Pages/Size.js"></script>
    <script>

        $(document).ready(function () {
            LoadData();
            var Msg = '@ViewBag.Msg';
            if (Msg == 3) {
                ShowMsg('حسنا تم اضافة الحجم وكل شيء يبدو جيدا.', MessageType.Success, 5);
            }
            else if (Msg == 2) {
                ShowMsg('لم يتم الحذف,الرجاء المحاولة مرة اخري', MessageType.Success, 5);
            }
            else if (Msg == 4) {
                ShowMsg('حسنا تم تعديل بيانات الحجم وكل شيء يبدو جيدا. ', MessageType.Success, 5);
            }
            else if (Msg == 1) {
                ShowMsg('حسنا تم الحذف  وكل شيء يبدو جيدا. ', MessageType.Success, 5);
            }
        });



        function Delete(Id) {
            var URL = '/Size/DeleteConfirmed/' + Id;
            DeleteRecord(URL, function (flag) {
                if (parseInt(ResultType.Success) == flag) {
                    ShowMsg('حسنا تم الحذف  وكل شيء يبدو جيدا. ', MessageType.Success, 5);
                    table.destroy();
                    LoadData();
                }
                else if (parseInt(ResultType.Error) == flag) {
                    ShowMsg('لم يتم الحذف,الرجاء المحاولة مرة اخري.', MessageType.Error, 5);
                }
            });
        }
    </script>
}












