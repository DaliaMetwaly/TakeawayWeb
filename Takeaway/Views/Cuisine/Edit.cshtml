@model Takeaway.Models.Cuisine
@{
    ViewBag.Title = "Create";
}

<div class="page-content" style="min-height: 1119px">
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="~/Home/index">الرئيسية</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/Cuisine/Index"> الاطباق  </a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                تعديل طبق
            </li>
        </ul>
    </div>
    <div id="divMsg">@Html.Raw(ViewBag.Msg)</div>
    <div class="row">
        <div class="col-md-12">
            @*<div id="bootstrap_alerts_demo">
                </div>*@
            <div class="portlet box grey-salsa">
                <div class="portlet-title">
                    <div class="caption">
                        تعديل طبق
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
                    </div>
                </div>
                <div class="portlet-body form">

                    <!-- BEGIN FORM-->

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "Metronic-alerts alert alert-danger fade in" })
                        @Html.HiddenFor(model => model.ID)
                        <div class="row">
                            <div class="col-md-9 ">
                                <div class="form-body">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CuisineAr, htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.EditorFor(model => model.CuisineAr, new { htmlAttributes = new { placeholder = "إدخل اسم الطبق ", @class = "form-control" } })
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.CuisineAr, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CuisineEn, htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.EditorFor(model => model.CuisineEn, new { htmlAttributes = new { placeholder = "  Cuisine name ", @class = "form-control" } })

                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.CuisineEn, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DescriptionAr, htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.TextAreaFor(model => model.DescriptionAr, new { placeholder = "إدخل الملاحظات", @class = "form-control", cols = "105" } )
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.DescriptionAr, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DescriptionEn, htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.TextAreaFor(model => model.DescriptionEn,  new { placeholder = " Notes", @class = "form-control", cols = "105" } )
                                            <span class="input-group-addon input-circle-right">
                                                @Html.ValidationMessageFor(model => model.DescriptionEn, "", new { @class = "text-danger" })
                                                @***@
                                            </span>
                                        </div>
                                    </div>


                                    <div class="form-group" style="display:none;">
                                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "col-md-4 control-label" })
                                        <div class="input-group col-md-4">
                                            @Html.EditorFor(model => model.IsActive, new { @class = "form-control" })
                                            <span class="input-group-addon input-circle-right">
                                               
                                            </span>
                                        </div>
                                    </div>



                                </div>
                            </div>

                        </div>

                        <div class="form-actions fluid">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" value="حفظ" class="btn green " />
                                    <a href="~/Cuisine/Index" class="btn default">للخلف</a>

                                </div>
                            </div>
                        </div>
                    }

                    <!-- END FORM-->
                </div>




            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script>

    </script>
}






