@model Takeaway.Models.ChangeUserPassword
<!-- Modal -->

<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">

        <div class="portlet box grey-salsa">
            <div class="portlet-title">
                <div class="caption">
                    تغيير البريد الالكترونى
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
                </div>
            </div>
            <div class="portlet-body form">

                <!-- BEGIN FORM-->

                @using (Html.BeginForm("ChangeEmail", "TakeawayUsers", FormMethod.Post, htmlAttributes: new { @id = "frmChangeEmail" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "Metronic-alerts alert alert-danger fade in" })
                    @Html.HiddenFor(model => model.UserId)

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName,"اسم المستخدم", htmlAttributes: new { @class = "col-md-4 control-label" })
                            <div class="input-group col-md-4">
                                <div class="form-control col-md-6">
                                    @Model.UserName
                                </div>

                            </div>
                        </div>

                    </div>

                    

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NewEmail , htmlAttributes: new { @class = "col-md-4 control-label" })
                            <div class="input-group col-md-4">
                                @Html.EditorFor(model => model.NewEmail, new { htmlAttributes = new { placeholder = "البريد الالكترونى الجديد", @class = "form-control col-md-6" } })
                                <span class="input-group-addon input-circle-right">
                                    @Html.ValidationMessageFor(model => model.NewEmail, "*", new { @class = "text-danger" })
                                </span>
                            </div>

                        </div>
                    </div>



                    <div class="form-actions fluid">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="حفظ" class="btn green " />
                                <button type="button" class="btn default" data-dismiss="modal">للخلف</button>
                            </div>
                        </div>
                    </div>
                }

                <!-- END FORM-->
            </div>

        </div>

    </div>
</div>



@section Scripts{
}








